---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <h3 class="text-center my-2">Galeria</h3>
    <div class="container mx-auto d-flex justify-content-between flex-wrap" id="imagenes">

    </div>
</Layout>

<script>
    const imagenesEl = document.querySelector("#imagenes");
    let valor="";
    for (let i=1; i<=8; i++){
        valor+=`<div class="card text-center mx-3 my-3" style="width: 18rem;">
                <img src="${i}.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" id="5" class="btn btn-primary">Ver</a>
                </div>
                </div>`
    }
    imagenesEl.innerHTML=valor;

    imagenesEl.addEventListener("click",(e)=>{
        alert("Hola");
    })

</script>